generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Trade {
  id              String   @id @default(uuid())
  userId          String
  ticker          String
  side            String
  entryPrice      Float
  exitPrice       Float?
  netPnl          Float?
  
  // 
  stopLoss        Float?
  takeProfit      Float?
  riskReward      Float?

  createdAt       DateTime @default(now())
} // 